FROM node:20-alpine

WORKDIR /app

# Copy package files first
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Start Vite dev server (without config)
CMD ["npx", "vite", "--host", "0.0.0.0", "--port", "8080", "--config", "/dev/null"]